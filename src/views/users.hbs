<h1>Usuarios</h1>
<div class="container mt-4">
    <ul class="list-group">
        {{#each users}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>Nombre</strong>: {{first_name}} - 
                    <strong>Apellido</strong>: {{last_name}} - 
                    <strong>Correo</strong>: {{email}}
                </div>
                
                <div class="btn-group" role="group" aria-label="Acciones">
                    <a href="/users/edit/{{id}}" class="btn btn-warning">Editar</a>
                    <a href="/users/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                </div>
            </li>
        {{/each}}
    </ul>
    <div class="text-center mt-3">
        {{#if hasPrevPage}}
            <a href="/users?numPage={{prevPage}}" class="btn btn-secondary">Anterior</a>
        {{/if}}
        <span class="mx-3">PÃ¡gina {{page}}</span>
        {{#if hasNextPage}}
            <a href="/users?numPage={{nextPage}}" class="btn btn-secondary">Siguiente</a>
        {{/if}}
    </div>
</div>

